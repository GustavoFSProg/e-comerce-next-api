generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_MONGO")
}

model Users {
  id    String  @id @default(uuid()) @map("_id")
  name String
  email String
  cpf  String
  password String
}

model Products {
  id        String   @id @default(uuid()) @map("_id")
  name      String
  preco     Float
  descricao String
  quantity  Int
  subtotal  Float
  imagem    String
  createdAt DateTime @default(now())
}

model Images {
  id        String @id @default(uuid()) @map("_id")
  idProduto String
  images    String
}
